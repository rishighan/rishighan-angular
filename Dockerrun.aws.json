{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nodejs-app",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    },
    {
      "name": "mongo-seed",
      "host": {
        "sourcePath": "/var/app/current/mongo-seed"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nodejs-app",
      "image": "<IMAGE_NAME>:<TAG>",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "DOCKER_MONGO_HOST",
          "value": "rishighanangular_mongodb_1"
        }
      ],
      "workingDirectory": "/usr/src/rishighan",
      "command": [
        "npm", "start"
      ],
      "links": [
        "mongo-seed:rishighanangular_mongodb_1"
      ]
    },
    {
      "name": "mongo-seed",
      "image": "frishi/rishighanangular_mongodb",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 27017
        }
      ]
    }
  ]
}
